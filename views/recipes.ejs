<!DOCTYPE html>
<html lang="en">
  <%- include("./partials/head.ejs") %>
<body>
  <%- include("./partials/header.ejs") %>

  <h2>Recipes</h2>
  
  <% if (recipes.length > 0) { %>
    <% recipes.forEach(recipe => { %>

    <div class="recipe-card">
      <h3 class="title"><%= recipe.title %></h3>
      <p class="description"><%= recipe.description %></p>
    </div>

    <% }) %>
  <% } %>
</body>
</html>